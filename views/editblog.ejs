<!DOCTYPE html>
<html lang="zh-cn">

<head>
    <!-- CSS-->
    <%- include simplehead %>
        <link href="/ueditor/themes/default/css/ueditor.css" type="text/css" rel="stylesheet">
        <title>New Blog</title>
       <script type="text/javascript" charset="utf-8" src="/ueditor/ueditor.config.js"></script>
    <script type="text/javascript" charset="utf-8" src="/ueditor/ueditor.all.min.js"> </script>
        <script>
        $(document).ready(function() {
            UE.getEditor('editor');
            $("#btnsave").click(function() {
                $.post("/articles/alterblog/"+<%= article.id %>, {
                    title: $("#newpagetitle").val(),
                    content: UE.getEditor('editor').getContent()
                }, function(data, status) {
                    if (status && data == "success") {
                        Materialize.toast('修改成功', 800, '', function() {
                            window.location = "/index";
                    });
                    } else
                        alert("失败")
                })
            });
        });
        </script>
</head>

<body>
    <%- include header %>
        <div class="container row">
            <div class="card hoverable truncate " style='padding-right: 20px; padding-bottom: 5px; padding-top: 10px; padding-left: 20px;'>
                <div class="input-field col12">
                    <input id="newpagetitle" name="title" type="text" value=<%= article.title %> style="font-size: 24px"/>
                    <label class="active" for="newpagetitle">New Article Title</label>
                </div>
            </div>
            <div class="card hoverable col12">
              <script id="editor" type="text/plain" class="col12" style="width:100%;height:500px;">
              <%- article.content %>
              </script>
            </div>
            <div class=" center">
                <button id="btnsave" class="btn waves-effect waves-light" type="submit" name="action">保存</button>
            </div>
        </div>
        <%- include footer %>
</body>

</html>
